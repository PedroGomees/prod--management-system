<html lang="pt-BR">
<head><style>
    body{
        height: 90vh;
    }
    header{
        height: 50px;
    }
   nav {
  

    font-size: 1em;
    
}

ul { 
    display: flex;
    list-style:none;
    margin: 0;
    padding: 0; 
}

.liFormatation{
    text-decoration: none;
    list-style: none;
    text-transform: uppercase;
    padding: 15px;
    text-shadow: black 2px 3px 3px;
    margin: 4px;
    background-color: transparent;
    color: transparent;
    box-shadow: 2px 10px 6px rgba(75, 75, 75, 0.856);
}
    #producao-main {
        font-family: Arial, sans-serif;
        background-color: #1a2835;
        height: auto;
        margin:0 auto;
        padding: 0;
        max-width: 800px;
        margin-top: 350px;
        display: block;
        padding: 20px;
        background-color: #c0e0ff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #producao-title {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    #producao-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

    #producao-table th, #producao-table td {
        padding: 30px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    #producao-table th {
        background-color: #007BFF;
        color: white;
    }

    #producao-table tr:hover {
        background-color: #f1f1f1;
    }

    #producao-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        padding: 10px;
        background-color: #007BFF;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

    #producao-link:hover {
        background-color: #0056b3;
    }
</style>


</head>

<main id="producao-main">
    <h1 id="producao-title">Lista de Produtos</h1>
    
    <table id="producao-table">
        <thead>
            <tr>
                
                <th>Nome do Produto</th>
                <th>Data</th>
                <th>Quantidade</th>
                <th>Descrição</th>
                <th>Produtor</th>
            </tr>
        </thead>
        <tbody>
            {{#each producoes}}
            <tr>
               
                <td>{{this.nome_produto}}</td>
                <td>{{this.data}}</td>
                <td>{{this.quantidade}}</td>
                <td>{{this.descricao}}</td>
                <td>{{this.nome_funcionario}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    
    <a id="producao-link" href="/produtos/registro">Inserir nova produção</a>
</main>
</html>